# Глобальные настройки инфраструктуры
# Скопируйте в .env.global и отредактируйте значения

# Временная зона
TZ=Europe/Moscow

# Пароли для баз данных
MYSQL_ROOT_PASSWORD=root_password_change_me
POSTGRES_PASSWORD=postgres_password_change_me
POSTGRES_USER=postgres

# Redis
REDIS_PASSWORD=

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_change_me

# Loki
LOKI_ADMIN_USER=admin
LOKI_ADMIN_PASSWORD=loki_password_change_me

# Traefik
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=traefik_change_me

# Домены (для /etc/hosts)
DOMAIN_SUFFIX=loc
